{
  "name": "nobl9",
  "displayName": "Nobl9",
  "description": "Provides Nobl9 Language Server integration.",
  "author": "Nobl9",
  "license": "MIT",
  "icon": "./assets/icon.png",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nobl9/nobl9-vscode"
  },
  "publisher": "Nobl9",
  "categories": [],
  "keywords": [
    "nobl9"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": {
      "command": "nobl9.restartServer",
      "title": "Nobl9: Restart Language Server",
      "when": "editorLangId == yaml"
    },
    "configuration": {
      "title": "Nobl9",
      "properties": {
        "nobl9.languageServer.executable": {
          "type": "string",
          "description": "Specify a custom path or a name available in the path to the Nobl9 Language Server executable."
        },
        "nobl9.languageServer.logLevel": {
          "type": "string",
          "default": "error",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "Specify log level for the Nobl9 Language Server to use."
        },
        "nobl9.languageServer.logFilePath": {
          "type": "string",
          "description": "Specify log file path for the Nobl9 Language Server to save the logs in."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b && node esbuild.mjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "lint": "eslint -c eslint.config.mjs --ext .ts src",
    "pretest": "yarn run compile",
    "test": "NOBL9_LANGUAGE_SERVER_NO_CONFIG_FILE='true' NOBL9_LANGUAGE_SERVER_CLIENT_ID='fake' NOBL9_LANGUAGE_SERVER_CLIENT_SECRET='fake' vscode-test",
    "vscode:prepublish": "yarn run package",
    "package": "yarn run check-types && node esbuild.mjs --production"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/vscode": "^1.75.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.25.1",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "vscode-languageclient": "^9.0.1"
  }
}
